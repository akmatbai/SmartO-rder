@model SmartO_rder.Models.Store
<h2>@Model.Name</h2>
<form asp-action="Buy" method="get">
    <label>Article <input type="text" name="article" /></label>
    <input type="hidden" name="slug" value="@Model.Slug" />
    <button type="submit">Find</button>
</form>
<ul>
@foreach (var p in Model.Products)
{
    <li>
        @p.Name - @p.Price
        <a asp-action="Buy" asp-route-slug="@Model.Slug" asp-route-article="@p.Article">Buy</a>
    </li>
}
</ul>
