@model IEnumerable<SmartO_rder.Models.Product>
@{ var table = (SmartO_rder.Models.Table)ViewBag.Table; }
<h2>Menu for table @table.Number</h2>
<div style="position:fixed;top:0;width:100%;background:#eee;padding:5px;">
    @foreach (var cat in Model.Select(p=>p.Category).Distinct()){
        <a href="#@cat">@cat</a> |
    }
</div>
<div style="position:fixed;bottom:10px;left:10px;">
    <form asp-action="CallWaiter" method="post" asp-route-slug="@table.Cafe!.Slug" asp-route-table="@table.Number">
        <button type="submit">Call Waiter</button>
    </form>
</div>
<div style="position:fixed;bottom:10px;right:10px;">
    <a href="#cart">Cart</a>
</div>
<div style="margin-top:40px;">
<ul>
@foreach (var p in Model)
{
    <li id="@p.Category">
        <img src="@p.ImageUrl" alt="@p.Name" style="width:50px;height:50px;" />
        @p.Name - @p.Price
    </li>
}
</ul>
</div>
<form asp-action="CallWaiter" method="post" asp-route-slug="@table.Cafe!.Slug" asp-route-table="@table.Number">
    <button type="submit">Call Waiter</button>
</form>
<ul>
@foreach (var p in Model)
{
    <li>@p.Name - @p.Price</li>
}
</ul>

